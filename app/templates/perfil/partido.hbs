<div class="row m-1 border bg-white panel">
  {{!-- Imagen --}}
  <div class="col-md-3 text-center p-3">
    <img
      src={{model.partido.logo}}
      alt="Logo de {{model.partido.nombreCompleto}}"
      width="100%">
  </div>
  {{!-- Información general --}}
  <div class="col-md-6 p-3">
    <div class="table-responsive-md">
      <h3>{{model.partido.nombreCorto}}</h3>
      <table class="table w-75">
        <tbody>
          <tr>
            <td class="p-0 border-top-0">
              <small>
                <strong>Nombre corto:</strong>
                {{model.partido.nombreCorto}}
              </small>
            </td>
          </tr>
          <tr>
            <td class="p-0 border-top-0">
              <small>
                <strong>Nombre completo:</strong>
                {{model.partido.nombreCompleto}}
              </small>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  {{!-- Redes sociales --}}
  <div class="col-md-3 social-side text-left d-block p-3">
    <div class="d-block mt-3">
      <div>
        <a href={{model.partido.web}} target="_blank" rel="noopener">
          <img src="img/icono-tw.png" alt="Página web">
          {{model.partido.web}}
        </a>
      </div>
      <div>
        <a href={{model.partido.correo}} target="_blank" rel="noopener">
          <img src="img/icono-tw.png" alt="Correo electrónico">
          {{model.partido.correo}}
        </a>
      </div>
      <div>
        <a href={{model.partido.tw}} target="_blank" rel="noopener">
          <img src="img/icono-tw.png" alt="Twitter">
          {{model.partido.tw}}
        </a>
      </div>
      <div>
        <a href={{model.partido.fb}} target="_blank" rel="noopener">
          <img src="img/icono-fb.png" alt="Facebook">
          {{model.partido.nombreCorto}}
        </a>
      </div>
    </div>
  </div>
</div>
