<div class="w-100 bg-light perfil-container">
  <section class="container profile my-4 py-5">
    <div class="row m-1 border bg-white panel">
      {{!-- Imagen --}}
      <div class="col-md-3 text-center p-3">
        <img
          src={{model.party.logo}}
          alt="Logo de {{model.party.nombreCompleto}}"
          width="100%">
      </div>
      {{!-- Informaci칩n general --}}
      <div class="col-md-6 p-3">
        <div class="table-responsive-md">
          <h3>{{model.party.nombreCorto}}</h3>
          <table class="table w-75">
            <tbody>
              <tr>
                <td class="p-0 border-top-0">
                  <small>
                    <strong>Nombre:</strong>
                    {{model.party.nombreCompleto}}
                  </small>
                </td>
              </tr>
              <tr>
                <td class="p-0 border-top-0">
                  <small>
                    <strong>Fecha de inscripci칩n:</strong>
                    {{model.party.fechaInscripcion}}
                  </small>
                </td>
              </tr>
              <tr>
                <td class="p-0 border-top-0">
                  <small>
                    <strong>Secretario general:</strong>
                    {{model.party.secretarioGeneral}}
                  </small>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      {{!-- Redes sociales --}}
      <div class="col-md-3 social-side text-left d-block p-3">
        <div class="d-block mt-3">
          <div>
            <a href={{model.party.web}} target="_blank" rel="noopener">
              <img src="img/icono-tw.png" alt="P치gina web">
              {{model.party.web}}
            </a>
          </div>
          <div>
            <a href={{model.party.correo}} target="_blank" rel="noopener">
              <img src="img/icono-tw.png" alt="Correo electr칩nico">
              {{model.party.correo}}
            </a>
          </div>
          <div>
            <a href={{model.party.tw}} target="_blank" rel="noopener">
              <img src="img/icono-tw.png" alt="Twitter">
              {{model.party.tw}}
            </a>
          </div>
          <div>
            <a href={{model.party.fb}} target="_blank" rel="noopener">
              <img src="img/icono-fb.png" alt="Facebook">
              {{model.party.nombreCorto}}
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <div class="panel">
          <div class="header">
            <h3>Miembros</h3>
          </div>
          <div class="body">
            <div id="portfolio" class="portfolio clearfix my-4">
              {{#each model.miembros as |profile|}}
                <article class="item {{profile.selector}} text-center">
                  <div class="background bg-white">

                    <div class="image">
                      {{#link-to "perfil" profile.typeCommonName profile.id}}
                        <img alt={{profile.cargoNombreCompleto}} src={{profile.fotoPerfil}}>
                      {{/link-to}}
                    </div>

                    <div class="text-center w-75 mx-auto px-auto">
                      <h6>{{profile.nombre}}</h6>
                      <h6 class="font-weight-light">{{profile.electionName}}</h6>
                    </div>

                    <div class="image-party">
                      <img src={{profile.partido.logo}} alt={{profile.partido.nombreCorto}}>
                    </div>

                  </div>
                </article>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>

