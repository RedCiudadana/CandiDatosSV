{{!-- Carousel --}}
{{#bs-carousel autoPlay="true" as |car|}}
  {{#car.slide}}
    <img alt="Paso 1" src="img/slider-1.png" height="auto" width="100%">
  {{/car.slide}}
  {{#car.slide}}
    <img alt="Paso 3" src="img/slider-3.png" height="auto" width="100%">
  {{/car.slide}}
{{/bs-carousel}}

<div class="container-fluid bg-light py-4">
  {{!-- Portofolio --}}
  <div class="row">
    <div class="col-10 offset-1 text-center py-5">
      <h4 class="py-2">Conoce a los candidatos a la Presidencia de El Salvador</h4>
      <div id="portfolio" class="portfolio clearfix my-4 mx-auto">
        {{#each pagedContent as |profile|}}
          <article class="item {{profile.selector}}">
            <div class="background bg-white">

              <div class="image">
                {{#link-to "perfil" profile.typeCommonName profile.id}}
                  <img alt={{profile.cargoNombreCompleto}} src={{profile.fotoPerfil}}>
                {{/link-to}}
              </div>

              <div class="text">
                <h6>{{profile.nombre}}</h6>
              </div>

              <div class="image-party">
                <img src={{profile.partido.logo}} alt={{profile.partido.nombreCorto}}>
              </div>

            </div>
          </article>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="container-fluid bg-dark justify-content-center py-5">
  {{!-- Fecha --}}
  <div class="row">
    <div class="col-4 text-right">
      <img src="img/calendario.png" alt="Calendario: 3 de febrero.">
    </div>
    <div class="col-6 text-center py-5">
      <h1 class="text-white">Elección: Domingo 3 de febrero</h1>
      <h3 class="text-success">Elecciones generales 2019</h3>
    </div>
  </div>
</div>

