{{!-- Carousel --}}
{{#bs-carousel autoPlay="true" as |car|}}
  {{#car.slide}}
    <img alt="Paso 1" src="img/slider-1.png" height="auto" width="100%">
  {{/car.slide}}
{{/bs-carousel}}

<div class="container-fluid bg-light py-4">
  {{!-- Portofolio --}}
  <div class="row">
    <div class="col-10 offset-1 text-center py-5">
      <h4 class="py-2">Conoce a los candidatos a la Presidencia de El Salvador</h4>
      <div id="portfolio" class="portfolio clearfix my-4 mx-auto">
        {{#each pagedContent as |profile|}}
          <article class="item {{profile.selector}}">
            <div class="background bg-white">

              <div class="image">
                {{#link-to "perfil" profile.typeCommonName profile.id}}
                  <img alt={{profile.cargoNombreCompleto}} src={{profile.fotoPerfil}}>
                {{/link-to}}
              </div>

              <div class="text">
                <h6>{{profile.nombre}}</h6>
              </div>

              <div class="image-party">
                <img src={{profile.partido.logo}} alt={{profile.partido.nombreCorto}}>
              </div>

            </div>
          </article>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="container-fluid bg-dark justify-content-center py-5">
  {{!-- Fecha --}}
  <div class="row">
    <div class="col-md-4 text-center text-md-right">
      <img src="img/calendario.png" alt="Calendario: 3 de febrero.">
    </div>
    <div class="col-md-6 text-center py-5">
      <h1 class="text-white">Elección: Domingo 3 de febrero</h1>
      <h3 class="text-success">Elección Presidencial 2019</h3>
    </div>
  </div>
</div>

<div class="container">
  {{!-- ¿Dónde voto? ¿Cuánto falta? ¡Empadrónate! --}}
  <div class="row high">
    <div class="col-md-4 text-center py-1">
      <a href="http://consulta.tse.gob.sv/" target="_blank">
        <button class="btn btn-warning btn-square text-white">
          <img src="img/icono-donde-voto.png" alt="Icono donde voto" height="60px">
          ¿Dónde voto?
        </button>
      </a>
    </div>
    <div class="col-md-4 text-center py-1">
      <button class="btn btn-success btn-square text-white">
        <img src="img/icono-cuanto-falta.png" alt="Icono cuanto falta" height="60px">
        Frente a Frente
      </button>
    </div>
    <div class="col-md-4 text-center py-1">
      <button class="btn btn-primary btn-square text-white">
        <img src="img/icono-empadronate.png" alt="Icono empadrónate" height="60px">
        Resultados
      </button>
    </div>
  </div>
  {{!-- Un proyecto de / Gracias al apoyo de --}}
  <div class="row colaboradores pb-5">
    <div class="col-12 text-center">
      <h5 class="font-weight-light">Un proyecto de:</h5>
      <a href="http://redciudadana.org/" target="_blank noopener"><img src="img/colaboradores/RED.png" alt="Logo de Red Ciudadana"></a>
      <a href="http://tracoda.info" target="_blank noopener"><img src="img/colaboradores/TRACODA.png" alt="Logo de Tracoda"></a>
      <a href="https://www.facebook.com/ECiudadanoSV/" target="_blank noopener"><img src="img/colaboradores/ESPACIO_CIUDADANO.png" alt="Logo de Espacio Ciudadano"></a>
    </div>
    <div class="col-12 text-center">
      <h5 class="font-weight-light">Gracias al apoyo de:</h5>
      <a href="" target="_blank noopener"><img src="img/colaboradores/KAS.png" alt="Logo de Red Ciudadana"></a>
    </div>
  </div>
</div>
